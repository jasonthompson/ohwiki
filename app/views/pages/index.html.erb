<%= render 'shared/edit_menu' %>

<section id="recent-pages">
  <h1>Recent Pages</h1>
  <ul>
    <% @pages.each do |p| %>
      <li><%= link_to p.title, '/pages/' + p.to_param %>
    <%= link_to 'Delete this page', page_path(p),
      :method => :delete, :data => { confirm: 'Are you sure?' },
      :id => p.to_param %></li>
    <% end %>
  </ul>
</section><!-- recent pages -->
