<h1>Create new page</h1>

<%= form_for @page do |f| %>
  <% if @page.errors.any? %>
    <div class="error_messages">
      <h2>Page is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title, :value => @title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit :value => 'Create page', :id => 'submit' %>
<% end %>
