<%= form_for :page, :url => page_path(@page), :method => :patch do |f| %>
  <% if @page.errors.any? %>
    <div class="error_messages">
      <h2>Page is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit :value => 'Save changes', :id => 'submit' %>
<% end %>
